{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "resolveJsonModule":true
  },
  "compileOnSave": true,
  "include": [
    "src",
    "test/**/*.spec.ts",
    ".firebaseAuth.json",
    "config/network.json",
    "package.json"
  ]
}
